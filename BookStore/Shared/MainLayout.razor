@inherits LayoutComponentBase

@using DataAccessLib
@inject sessionstate state
@inject NavigationManager manuv
<PageTitle>BookStore</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="" @onclick = "@Logout">Log out</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
@code{
    private void Logout()
    {
        state = null;
        manuv.NavigateTo("/");
    }
}
